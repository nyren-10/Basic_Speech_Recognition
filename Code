import speech_recognition as sr
import pyttsx3 as tts

def listen_command():
    recognizer=sr.Recognizer()
    with sr.Microphone() as source:
        recognizer.adjust_for_ambient_noise(source,duration=1)
        print("Listening...")
        tts.speak("Listening...")

        audio = recognizer.listen(source,timeout=5)
        print("Recognizing...")
        tts.speak("Recognizing...")
        ans=recognizer.recognize_google(audio,language="en-in")
        return ans

prg=listen_command()
print(f"The user said {prg}")
tts.speak(f"The User said {prg}")



